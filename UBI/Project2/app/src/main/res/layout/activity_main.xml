<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/User"
        android:layout_width="383dp"
        android:layout_height="83dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:onClick="clearData"
        android:text="UserData"
        android:textSize="24sp"
        app:iconGravity="top"
        app:iconPadding="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Adds"
        android:layout_width="170dp"
        android:layout_height="360dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rectangular_button"
        android:onClick="addonsClicked"
        android:text="Your Addons"
        android:textSize="32sp"
        app:iconGravity="top"
        app:iconPadding="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Change" />

    <Button
        android:id="@+id/Games"
        android:layout_width="170dp"
        android:layout_height="360dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangular_button"
        android:onClick="gamesClicked"
        android:text="Your Games"
        android:textSize="32sp"
        app:iconGravity="top"
        app:iconPadding="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Change" />

    <Button
        android:id="@+id/Sync"
        android:layout_width="357dp"
        android:layout_height="100dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="32dp"
        android:onClick="syncClicked"
        android:text="Synchronize"
        android:textSize="24sp"
        app:iconGravity="top"
        app:iconPadding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Change"
        android:layout_width="383dp"
        android:layout_height="83dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="Change Account"
        android:textSize="28sp"
        android:onClick="ChangeAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/User" />


</androidx.constraintlayout.widget.ConstraintLayout>